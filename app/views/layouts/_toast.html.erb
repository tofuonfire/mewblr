<% if flash[:success]%>
  <nav class="fixed-bottom toast mx-auto mb-sm-4" data-delay="4000" style="background-color: #23cd04">
    <div class="toast-body d-flex align-items-center p-2">
      <div class="mx-auto font-weight-bold" style="color: #fff; font-size: 1rem"><%= flash[:success]%></div>
    </div>
  </nav>

  <script>
  $('.toast')
    .toast({
      autohide: true
    })
    .toast('show')
  </script>
<% end %>