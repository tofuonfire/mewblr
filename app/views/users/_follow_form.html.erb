<% unless object == current_user %>
  <div class="follow-form user-<%= object.id %>" style="width: 100%; margin-top: 14px;">
    <% if current_user.following?(object) %>
      <%= render 'unfollow', object: object %>
    <% else %>
      <%= render 'follow', object: object %>
    <% end %>
  </div>
<% end %>