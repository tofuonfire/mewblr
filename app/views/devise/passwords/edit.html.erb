<!-- パスワード再設定の際に送られる確認メールのリンクをクリックするとこのページに飛ぶ -->
<% provide :title, "パスワードを変更" %>

<div class="custom-form">
  <div class="container">
    <div class="col-10 offset-1 col-sm-6 offset-sm-3">
      <h1 class="form-title mb-4 text-center">パスワードを変更する</h1>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field form-group">
            <%= f.label :password, "新しいパスワード" %><br />
            <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
            <p class="note"><%= @minimum_password_length %>文字以上</p>
        </div>

        <div class="field form-group mb-5">
          <%= f.label :password_confirmation, "新しいパスワードを再入力" %><br />
          <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off" %>
        </div>

        <div class="actions text-center">
          <%= f.submit "変更を確定する", { class: "btn submit-btn" } %>
        </div>
      <% end %>
      
    </div>
  </div>
</div>