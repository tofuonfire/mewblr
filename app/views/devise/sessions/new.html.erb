<% provide :title, "Log in" %>

<div class="custom-form">
  <div class="container">
    <div class="col-10 offset-1 col-sm-6 offset-sm-3">
      <h1 class="mb-4 text-center">Log in</h1>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <% if notice %><h2 class="alert alert-notice text-center"><%= notice %></h2><% end %>
        <% if alert %><h2 class="alert text-center"><%= alert %></h2><% end %>

        <div class="field form-group">
          <p><%= f.label "username or email address" %><br />
          <%= f.text_field :login, class: "form-control" %></p>
        </div>

        <div class="field form-group">
          <%= f.label :password %><br />
          <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field form-group mb-5">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions text-center mb-4">
          <%= f.submit "Log in to #{website_name}", { class: "btn" } %>
        </div>
      <% end %>
      <div class="text-center">
        <%= link_to "Forgot password?", new_password_path(resource_name), class: "custom-link forgot-pass" %>
      </div>
    </div>
  </div>
</div>