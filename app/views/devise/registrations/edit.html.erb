<% provide :title, "プロフィールを編集" %>
      
<div class="custom-form">
  <div class="container" style="max-width: 730px; padding: 2.5rem 30px;">
    <h1 class="form-title mb-4 text-center">プロフィールを編集</h1>
    <div class="col-10 offset-1 col-sm-8 offset-sm-2 no-gutters" style="padding: 0;">
      <%= render "devise/shared/error_messages", resource: resource %>
    </div>
    
    <div class="row">

      <!-- プロフィール画像編集カラム -->
      <div class="col-sm-4 d-flex d-sm-flex justify-content-center justify-content-sm-start mb-4 mb-sm-0 pl-sm-0">
        <div>
          <%= image_tag("user_icon.jpeg", size: "150x150", class: "rounded-circle z-depth-0 mb-4", alt: "avatar image") %>
          <div class="d-flex justify-content-center">
            <button type="button" class="btn submit-btn"><div style="white-space: nowrap;">画像を変更</div></button>
          </div>
        </div>
      </div>

      <div class="col-sm-8 no-gutters" style="padding: 0;">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

          <div class="field form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="field form-group">
            <%= f.label :bio %><br />
            <%= f.text_field :bio, class: "form-control" %>
          </div>

          <div class="field form-group">
            <%= f.label :username %>
            <div class="input-group">
              <div class="input-group-prepend">
                <div class="input-group-text">@</div>
              </div>
              <%= f.text_field :username, class: "form-control with-ig" %>
            </div>
            <p class="note">小文字の半角英数字と'_'(アンダーバー)のみ</p>
          </div>

          <div class="field form-group">
            <%= f.label :email %>
            <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="field form-group">
            <%= f.label :password %>
            <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
            <p class="note"><%= @minimum_password_length %>文字以上（変更しない場合は空欄にして下さい）</p>
          </div>

          <div class="field form-group">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
          </div>

          <div class="field form-group mb-5">
            <%= f.label :current_password %>
            <%= f.password_field :current_password, class: "form-control", autocomplete: "current-password" %>
            <p class="note">変更確認のために入力が必要です</p>
          </div>

          <div class="actions text-center mb-4">
            <%= f.submit "変更を保存する", { class: "btn submit-btn" } %>
          </div>

        <% end %>

      </div>
      
    </div><!-- row -->

  </div><!-- container -->
</div><!-- custom-form -->